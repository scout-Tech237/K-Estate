<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="8dp"
android:id="@+id/my_prop_cv_item">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/my_prop_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/my_prop_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/my_prop_item_image"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="kCBDULBCUI;DN;AC I"
        android:layout_toRightOf="@id/my_prop_item_image" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/my_prop_item_image"
        android:layout_marginStart="20dp"
        android:weightSum="100"
        >

        <TextView
            android:id="@+id/my_prop_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="kjauykdyucgdysaucvsyd sjaycbc "
            android:textColor="@color/black"
            android:layout_weight="76.6"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/my_prop_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="kjauykdyu"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="23.3"
            tools:ignore="SmallSp" />
    </LinearLayout>


</RelativeLayout>




</androidx.cardview.widget.CardView>